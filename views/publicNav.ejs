<style>
  .publicNav{
    position: fixed;
    width: 100%;
    padding: 16px 0;
    /* border-bottom: 1px solid #4A4C55; */
    background: #058296;
    z-index: 99;
    box-shadow: 3px 3px 5px #bbbbbb;
  }
  .publicNav .publicWidth{
    align-items: center;
    justify-content: space-between;
  }
  .publicNav .logo a{
    font-size: 24px;
    /* color: #808191; */
    color: #ffffff;
    display: flex;
    align-items: center;
  }
  .publicNav .logo a svg{
    width: 28px;
    height: auto;
    fill: #fff;
    margin-right: 5px;
  }
  .publicNav .nav ul{
    display: flex;
    align-items: center;
  }
  .publicNav .nav a{
    /* color: #7d7b8a; */
    color: #c0f7fd;
    /* color: #fff; */
    font-size: 15px;
    font-weight: 400;
    padding: 0 16px;
  }
  .publicNav .nav a:hover{
    color: #fff;
    /* color: #c0f7fd; */
  }
  .publicNav .nav a.active{
    color: #fff;
    /* color: #c0f7fd; */
  }
  .publicNav .serch{
    display: flex;
    align-items: center;
    position: relative;
  }
  .publicNav .serch input{
    max-width: 140px;
    padding: 8px;  
    border-radius: 3px;
    border: none;
    margin-left: 10px;
  }
  .publicNav .serch input::-webkit-outer-spin-button,
  .publicNav .serch input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  .publicNav .serch input[type=number] {
    -moz-appearance: textfield;
  }
  .publicNav .serch a{
    position: absolute;
    right: 5px;
    top: 6px;
    padding: 0;
    height: auto;
    width: 18px;
    cursor: pointer;
  }
  .publicNav .serch a svg{
    width: 100%;
    height: auto;
    fill: #c7c8c9;
  }
</style>
<div class="publicNav">
  <div class="publicWidth">
    <div class="logo">
      <a href="./">
        <svg
          clip-rule="evenodd"
          fill-rule="evenodd"
          stroke-linejoin="round"
          stroke-miterlimit="2"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="m2.394 15.759s7.554 4.246 9.09 5.109c.165.093.333.132.492.132.178 0 .344-.049.484-.127 1.546-.863 9.155-5.113 9.155-5.113.246-.138.385-.393.385-.656 0-.566-.614-.934-1.116-.654 0 0-7.052 3.958-8.539 4.77-.211.115-.444.161-.722.006-1.649-.928-8.494-4.775-8.494-4.775-.502-.282-1.117.085-1.117.653 0 .262.137.517.382.655zm0-3.113s7.554 4.246 9.09 5.109c.165.093.333.132.492.132.178 0 .344-.049.484-.127 1.546-.863 9.155-5.113 9.155-5.113.246-.138.385-.393.385-.656 0-.566-.614-.934-1.116-.654 0 0-7.052 3.958-8.539 4.77-.211.115-.444.161-.722.006-1.649-.928-8.494-4.775-8.494-4.775-.502-.282-1.117.085-1.117.653 0 .262.137.517.382.655zm10.271-9.455c-.246-.128-.471-.191-.692-.191-.223 0-.443.065-.675.191l-8.884 5.005c-.276.183-.414.444-.414.698 0 .256.139.505.414.664l8.884 5.006c.221.133.447.203.678.203.223 0 .452-.065.689-.203l8.884-5.006c.295-.166.451-.421.451-.68 0-.25-.145-.503-.451-.682z" fill-rule="nonzero"/>
        </svg>
        股票觀測站
      </a>
    </div>
    <div class="nav">
      <ul>
        <li>
          <a href="./" class="<%if(active=='home'){%>active<%}%>">首頁</a>
        </li>
        <li>
          <a href="./compare" class="<%if(active=='compare'){%>active<%}%>">股票比較</a>
        </li>
        <li>
          <a href="./remuneration" class="<%if(active=='remuneration'){%>active<%}%>">股票報酬</a>
        </li>
        <!-- <li>
          <a href="./backtest" class="<%if(active=='backtest'){%>active<%}%>">股票回測</a>
        </li> -->
        <!-- <li>
          <a href="individual" class="<%if(active=='individual'){%>active<%}%>">個股查詢</a>
        </li> -->
        <li class="serch">
          <input type="text" placeholder="股票代號">
          <a class="<%if(active=='individual'){%>active<%}%>"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M23.809 21.646l-6.205-6.205c1.167-1.605 1.857-3.579 1.857-5.711 0-5.365-4.365-9.73-9.731-9.73-5.365 0-9.73 4.365-9.73 9.73 0 5.366 4.365 9.73 9.73 9.73 2.034 0 3.923-.627 5.487-1.698l6.238 6.238 2.354-2.354zm-20.955-11.916c0-3.792 3.085-6.877 6.877-6.877s6.877 3.085 6.877 6.877-3.085 6.877-6.877 6.877c-3.793 0-6.877-3.085-6.877-6.877z"/></svg></a>
        </li>
      </ul>
    </div>
  </div>
</div>
<script>
  const publicNavSerch = document.querySelector('.publicNav .serch')
  const publicNavSerchInput = publicNavSerch.querySelector('input')
  const publicNavSerchLink = publicNavSerch.querySelector('a')
  publicNavSerchLink.addEventListener('click',function(){
    const value = publicNavSerchInput.value
    if(!value){
      alert('請輸入股號')
      return false;
    }
    window.location = `./individual/${value}`;
  })
</script>
